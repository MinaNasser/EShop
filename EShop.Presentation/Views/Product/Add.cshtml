@{
    Layout = "_AdminLayout";

    var selectListItems = ViewData["CategoriesList"] as List<SelectListItem>;
}
@model AddProductViewModel

<h1 class="mb-4" style="color: #023059;">@ViewBag.Title</h1>
<h2 class="mb-4" style="color: #023059;">Add New Product</h2>

<form asp-action="add" asp-controller="product" method="post" enctype="multipart/form-data" style="background-color: white; padding: 30px; border-radius: 12px; box-shadow: 0 0 10px rgba(0,0,0,0.1); max-width: 700px;">
    <div class="mb-3">
        <label class="form-label" asp-for="Name" style="color: #023059;"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Description" style="color: #023059;"></label>
        <textarea class="form-control" rows="4" placeholder="Enter Multi Line To Discripe Product " asp-for="Description"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Price" style="color: #023059;"></label>
        <input class="form-control" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Quantity" style="color: #023059;"></label>
        <input class="form-control" asp-for="Quantity" />
        <span class="text-danger" asp-validation-for="Quantity"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="CategoryId" style="color: #023059;"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="@selectListItems"></select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Attachments" style="color: #023059;"></label>
        <input accept="image/*" class="form-control" asp-for="Attachments" />
        <span class="text-danger" asp-validation-for="Attachments"></span>
    </div>

    <input class="btn" type="submit" value="Add New Product"
           style="background-color: #efb036; color: #023059; font-weight: bold; border: none; padding: 10px 20px; border-radius: 6px; transition: 0.3s;"
           onmouseover="this.style.backgroundColor='#023059'; this.style.color='white';"
           onmouseout="this.style.backgroundColor='#efb036'; this.style.color='#023059';" />
</form>
