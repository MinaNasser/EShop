@{
    ViewData["Title"] = "Register";
    List<SelectListItem> listItems = ViewBag.roles as List<SelectListItem>;
}
@model UserRegisterViewModel

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 450px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Create Account</h3>
            <form asp-action="Register" asp-controller="Account" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input class="form-control" asp-for="UserName" placeholder="Enter your username">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input class="form-control" asp-for="Email" placeholder="Enter your email" type="email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input class="form-control" asp-for="PhoneNumber" placeholder="Enter your phone number">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input class="form-control" asp-for="Password" type="password" placeholder="Enter password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PasswordConfirmed" class="form-label">Confirm Password</label>
                    <input class="form-control" asp-for="PasswordConfirmed" type="password" placeholder="Confirm password">
                    <span asp-validation-for="PasswordConfirmed" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Role" class="form-label"></label>
                    <select class="form-control" asp-for="Role" asp-items="@listItems"></select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>

                <div class="mt-3 text-center">
                    Already have an account? <a asp-action="Login" asp-controller="Account">Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

