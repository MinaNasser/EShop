@{
    Layout = "_AdminLayout";
}
@model List<Category>

@section styles {
    <style>
        .test {
            color: aqua;
            margin-bottom : 1.5rem;
        }
    </style>
}
<h1 class="test">Your Category </h1>
<table class="table table-dark table-bordered table-striped">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)

        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(category.Image))
                    {
                        <img src="@category.Image" alt="Category Image" style="width: 50px; height: 50px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

