@model List<OrderDetailsViewModel>

<h1 class="mt-4 mb-4" style="color: #023059;">Order List</h1>

<div class="container">
    <table class="table table-bordered">
        <thead style="background-color: #023059; color: white;">
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Total Price</th>
                <th>Total Quantity</th>
                <th>Status</th>
                <th>Payment Method</th>
                <th>Client Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Date.ToShortDateString()</td>
                    <td>$@order.TotalPrice</td>
                    <td>@order.TotalQuantity</td>
                    <td>@order.Status</td>
                    <td>@order.PaymentMethod</td>
                    <td>@order.ClientName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>